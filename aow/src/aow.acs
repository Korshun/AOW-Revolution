function void ACSUtilsErrorHandler(int type, int message)
{
	str prefix = "";
	if (IsServer() != IsClient())
	{
		if (IsServer())
			prefix = "[\cgserver\c-] ";
		else
			prefix = "[\cdclient\c-] ";
	}
	
	if (!IsClient())
		Log(s:prefix, d:Timer(), s:" error: ", s:message);

	printbold(s:prefix, d:Timer(), s:" error: ", s:message);
}

